processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid

storage:
  journal:
    enabled: true

  # 1. MMAPV1 storage engine
  engine: "mmapv1"
  dbPath: "/mnt/mmap/data"
  mmapv1:
    smallFiles: true

  # 2. WiredTiger storage engine (replace XXX with suitable values where appropriate)
  # engine: "wiredTiger"
  # dbPath: "/mnt/wt/data"
  # wiredTiger:
  #   engineConfig:
  #     cacheSizeGB: XXX # Default: max(60% RAM less 1GB, 1GB)
  #     journalCompressor: XXX # Default: snappy
  #     directoryForIndexes: XXX # Default: false
  #   collectionConfig:
  #     blockCompressor: XXX # Default: snappy
  #   indexConfig:
  #     prefixCompression: XXX # Default: true

  # 3. InMemory storage engine (replace XXX with suitable values where appropriate)
  # engine: "inMemory"
  # dbPath: "/var/lib/mongo"
  # inMemory:
  #   engineConfig:
  #     inMemorySizeGB: XXX # Default: 50% of physical RAM less 1 GB

systemLog:
  path: "/var/log/mongodb/mongod.log"
  destination: file

net:
  port: 27017

